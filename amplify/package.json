{
  "type": "module",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.772.0",
    "@aws-sdk/client-ses": "^3.758.0",
    "@aws-sdk/client-sns": "^3.772.0",
    "prettier": "^3.5.0"
  },
    "scripts": {
        "format": "npx prettier . --write",
        "test": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.js --silent=true"
    },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  }
}
